@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}


<style>
    .login-wrapper{
        border:1px solid #eee;
        border-radius:10px;
        padding:10px;
        width:40%;
        margin:5em auto;
        box-shadow:1px 2px 2px #eee;
    }

</style>



    <div class="row ">
        
        <div class="login-wrapper">
            <h3>Ingresar</h3>
            <hr />
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="exampleInputEmail1">UserName</label>
                    <input asp-for="UserName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter UserName">
                    <span style="color:crimson" asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <span style="color:crimson" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                
                <button type="submit" class="btn btn-primary">Ingresar</button>

                @*@Html.DisplayFor(x => x.Mensaje)*@
            </form>
        </div>
    </div>



