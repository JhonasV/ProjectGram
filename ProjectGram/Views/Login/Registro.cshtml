@model ProjectGram.Models.UserViewModel
@{
    ViewData["Title"] = "Registro";
}

<h2>Registro</h2>

<div class="row">
    
    <div class="col-lg-10 col-center">
        <form asp-action="AddUser" asp-controller="Login" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Email</label>
                    <input required asp-for="User.Email" type="email" class="form-control" id="inputEmail4" placeholder="Email">
                    <span asp-validation-for="User.Email"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input asp-for="User.Password" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                    <span asp-validation-for="User.Password"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">Nombre</label>
                    <input required asp-for="User.Nombre" type="text" class="form-control" id="inputCity" placeholder="Nombre">
                    <span asp-validation-for="User.Nombre"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCity">Apellido</label>
                    <input required asp-for="User.Apellido" type="text" class="form-control" id="inputCity" placeholder="Apellido">
                    <span asp-validation-for="User.Apellido"></span>
                </div>
               
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputCity">NickName</label>
                    <input required asp-for="User.NickName" type="text" class="form-control" id="inputCity" placeholder="NickName">
                    <span asp-validation-for="User.NickName"></span>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCity">Fecha de Nacimiento</label>
                    <input required asp-for="User.FNacimiento" type="date" class="form-control" id="inputCity">
                    <span asp-validation-for="User.FNacimiento"></span>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Registrarse</button>
           @Html.DisplayFor(x => x.Mensaje)
            
        </form>
    </div>
</div>

