@model ProjectGram.Models.UserViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="col-center">
    <div class="row ">
       
        
        <div class="col-lg-6">
            <form asp-action="Autorizacion" asp-controller="Login">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input asp-for="User.Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="User.Email"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input asp-for="User.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <span asp-validation-for="User.Password"></span>
                </div>

                <button type="submit" class="btn btn-primary">Ingresar</button>
                @Html.DisplayFor(x => x.Mensaje)
            </form>
        </div>
    </div>
</div>